<Window x:Class="Tetris.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        Title="Tetris" Height="500" Width="500">

    <Grid Background="#FF8FCF48">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="233*"/>
        </Grid.ColumnDefinitions>
        <Button Name="btnJugar" Content="Nueva Partida" HorizontalAlignment="Left" Margin="44,60,0,0" VerticalAlignment="Top" Width="360" FontWeight="Bold" FontSize="45" Click="btnJugar_Click" Background="#FFDE2E3E" Foreground="#FF51136E" BorderBrush="#FF3A4B25" Grid.Column="1"/>
        <Button x:Name="btnCreditos" Content="Creditos" HorizontalAlignment="Left" Margin="44,334,0,0" VerticalAlignment="Top" Width="360" FontWeight="Bold" FontSize="45" Click="btnCreditos_Click" Background="#FFDE2E3E" Foreground="#FF51136E" BorderBrush="#FF3A4B25" Grid.Column="1"/>
        <Button x:Name="btnTop" Content="Altos puntos" HorizontalAlignment="Left" Margin="44,200,0,0" VerticalAlignment="Top" Width="360" FontWeight="Bold" FontSize="45" Click="btnTop_Click" Background="#FF7E3F98" Foreground="#FFBF1B28" BorderBrush="#FF3A4B25" Grid.Column="1" />

    </Grid>
</Window>
